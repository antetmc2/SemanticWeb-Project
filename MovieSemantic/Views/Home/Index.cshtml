@model MovieSemantic.Models.SearchModel
@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="row text-center">
            <h2>Pretraga semantičkih izvora podataka:</h2>
            <div class="col-md-12" style="padding-bottom: 5px;">
                @Html.TextBoxFor(m => m.Term, new { @class = "form-control", id = "forma", style = "margin-left: auto; margin-right: auto; float: none;" })
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-12" style="padding-bottom: 20px; margin-top: 10px;">
                <input type="submit" class="btn btn-default" value="Submit" />
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-offset-2 col-md-12" style="margin: 5px 0 2px 5px;">
                <p>@Html.RadioButtonFor(m => m.Criteria, 0) @Html.LabelFor(m => m.Criteria, "Pretraga po naslovu")</p>
                <p>@Html.RadioButtonFor(m => m.Criteria, 1) @Html.LabelFor(m => m.Criteria, "Pretraga po imenu glumca")</p>
            </div>
        </div>
        </div>
}

<hr />

<div class="text-center" style="font-size: 12px;">
    <span>Ukupni broj filmova: @Model.BrojTrojki</span><span> | Ukupni broj glumaca: @Model.BrojGlumaca</span><span> | Ukupni broj direktora: @Model.BrojDirektora</span><span> | Ukupni broj scenarista: @Model.BrojScenarista</span>
</div>